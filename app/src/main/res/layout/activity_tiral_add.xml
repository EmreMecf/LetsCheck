<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TiralAdd">

    <Button
            android:text="EKLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ekle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp" android:onClick="ekle"/>
    <TextView
            android:layout_height="47dp"
            android:id="@+id/text"
            android:layout_width="348dp"
            android:text="TYT DENEMESİ EKLE"
            android:textSize="37dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/text1"
            android:layout_width="86dp"
            android:layout_height="38dp"
            android:text="Doğru:"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/text2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginBottom="24dp"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dogru"
            android:hint="123"
            app:layout_constraintBottom_toTopOf="@+id/yanlıs" app:layout_constraintStart_toEndOf="@+id/text1"
            android:layout_marginBottom="18dp"/>
    <TextView
            android:id="@+id/text2"
            android:layout_width="86dp"
            android:layout_height="38dp"
            android:text="Yanlış:"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="244dp"
            android:layout_marginStart="2dp"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/yanlıs"
            android:hint="123"
            app:layout_constraintStart_toEndOf="@+id/text2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="236dp"/>
    <EditText android:layout_width="300dp"
              android:layout_height="48dp"
              android:hint="Trial Enter Name"
              android:id="@+id/trialname"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/text" android:layout_marginTop="76dp"
              app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:text="NET:"
            android:textSize="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="284dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85" android:id="@+id/net"/>


</androidx.constraintlayout.widget.ConstraintLayout>